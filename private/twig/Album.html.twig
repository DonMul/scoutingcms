{% extends 'global.html.twig' %}

{% import 'macros.html.twig' as macros %}

{% block template %}
    {{ macros.nav() }}
    <div class="hero__image hero__image--main">
        <div class="hero__text">
            <h1>{{ context.album.name }}</h1>
            <h2>Franciscus Lodewijk Groep</h2>
        </div>
    </div>
    <section class="section__padded">
        <div class="container album-container">
            <div class="row">
                {% for picture in context.pictures %}
                    <div class="col-xs-12 col-sm-4">
                        <div class="albumimage">
                            <img src="/upload/{{ context.category.name }}/{{ context.albumHash }}/{{ picture.location }}" class="albumimage__image js-modal" data-toggle="modal" data-target="#myModal"/>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">{{ context.album.name }}</h4>
                </div>
                <div class="modal-body">
                    <img src="" id="modalImage" class="modal__image"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left js-btn-previous"><i class="fa fa-chevron-left"></i></button>
                    <button type="button" class="btn btn-default js-btn-next"><i class="fa fa-chevron-right"></i></button>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
