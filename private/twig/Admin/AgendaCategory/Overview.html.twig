{% extends 'Admin.html.twig' %}

{% import 'macros.html.twig' as macros %}

{% block adminTemplate %}
    <h2>{{ t('calenderCategory.admin') }}</h2>
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <a href="{{ tl('adminCalenderCategory', {'id': 0}) }}" class="button__no">
                <i class="fa fa-plus button__add">
            <span class="button__inner">
                {{ t('calenderCategory.new') }}
            </span>
                </i>
            </a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ t('calenderCategory.name') }}</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for item in context.categories %}
            <tr>
                <td>
                    {{ item.name }}
                </td>
                <td>
                    <a class="admin_speltak-link" href="{{ tl('adminCalenderCategory', {'id': item.id}) }}">
                        <i class="fa fa-wrench button__edit"></i>
                    </a>
                </td>
                <td>
                    <form method="post" action="{{ tl('serviceCalenderCategoryDelete') }}">
                        <input type="hidden" name="categoryId" value="{{ item.id }}"/>
                        <button type="submit" class="button__no">
                            <i class="fa fa-times button__remove"></i>
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        {% if context.categories|length <= 0 %}
            <tr>
                <td class="text-center" colspan="5">
                    {{ t('calenderCategory.noItems') }}
                </td>
            </tr>
        {% endif %}
        </tbody>
    </table>
{% endblock %}