{% extends 'global.html.twig' %}

{% import 'macros.html.twig' as macros %}

{% block template %}
    {{ macros.nav(menu) }}
    <div class="hero__image hero__image--main">
        <div class="hero__text">
            <h1>{{ context.item.name }}</h1>
            <h2>{{ s('groupName') }}</h2>
        </div>
    </div>
    <section id="info" class="section__padded">
        <div class="section-contents">
            <div class="container">
                <div class="row">
                    <div class="col-xs-6">
                        <strong>{{ t('calender.what') }}</strong>:
                    </div>
                    <div class="col-xs-6">
                        {{ context.item.name }}
                    </div>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-xs-6">
                        <strong>{{ t('calender.when') }}</strong>:
                    </div>
                    <div class="col-xs-6">
                        {{ context.item.startDate }} {{ t('calender.untill') }} {{ context.item.endDate }}
                    </div>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-xs-6">
                        <strong>{{ t('calender.type') }}</strong>:
                    </div>
                    <div class="col-xs-6">
                        {{ context.category.name }}
                    </div>
                </div>
                <hr/>
                <h4>{{ t('calender.description') }}</h4>
                <div class="row">
                    <div class="col-xs-12">
                        {{ context.item.description|raw }}
                    </div>
                </div>
                <small><a href="{{ tl('calender') }}" class="btn btn-success">< {{ t('common.back') }}</a></small>
            </div>
        </div>
    </section>
{% endblock %}
